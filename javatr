//ONE-DIMENSIONAL ARRAY
package expp;
import java.util.Scanner;
public class otarr {
public static void main(String args[])
{
Scanner scan = new Scanner(System.in);
System.out.println("Enter length of Array: ");
int arrLength = scan.nextInt();
int [] arr= new int[arrLength];
System.out.println("Enter the elements of the Array");
for(int i = 0; i < arrLength; i++)
{
arr[i] = scan.nextInt();
}
System.out.println("Displaying One dimensional array elements:");
for(int i=0; i < arrLength ; i++)
{
System.out.print(arr[i] + " ");
}
}
}

//TWO-DIMENSIONAL ARRAY
package exp2;
import java.util.Scanner;
public class tarr {
public static void main(String[] args) {
Scanner sc=new Scanner(System.in);
System.out.println("Enter Row length of an array : ");
int row=sc.nextInt();
System.out.println("Enter column length of an array : ");
int column=sc.nextInt();
int a[][]=new int[row][column];
System.out.print("Enter " + row*column + " Elements to Store in Array :\n");
for (int i = 0; i < row; i++)
{
for(int j = 0; j < column; j++)
{
a[i][j] = sc.nextInt();
}
}
System.out.print("Elements in Array are :\n");
for (int i = 0; i < row; i++)
{
for(int j = 0; j < column; j++)
{
System.out.println("Row ["+i+"]: Column ["+j+"] :"+a[i][j]);
}
}
}
}
